<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/white</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/launcher</item>
        <item name="windowSplashScreenAnimationDuration">400</item>  # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.MovieShowsApp</item>  # Required.
    </style>

    <style name="title_rv_item">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="body_rv_item">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>